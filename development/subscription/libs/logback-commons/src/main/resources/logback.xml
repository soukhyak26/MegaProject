<?xml version="1.0" encoding="UTF-8" ?>
<configuration scan="true">

    <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener"/>

    <property resource="logback.properties"/>
    <appender name="STDOUT"
              class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>
                %d{HH:mm:ss.SSS} [%thread] %-5level %logger{32} - %msg%n
            </pattern>
        </layout>
    </appender>

    <appender name="FILE"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${LOG_DIR:-/cust/logs/subscription}/${logfile.name}.log</File>
        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>
                ${LOG_DIR:-/cust/logs/subscription}/${logfile.name}.log.%d{yyyy.MM.dd-HH}
            </FileNamePattern>
        </rollingPolicy>

        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{HH:mm:ss,SSS} [%thread] %-5level %logger{32} - %msg%n
            </Pattern>
        </layout>
    </appender>

    <root>
        <level value="INFO"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="com.affaince">
        <level value="INFO"></level>
    </logger>
    <logger name="org.springframework">
        <level value="INFO"/>
    </logger>

    <logger name="org.apache.camel">
        <level value="INFO"/>
    </logger>

    <logger name="org.apache.activemq">
        <level value="INFO"/>
    </logger>

    <!--<include file="/tmp/logback-demo.xml"/>-->
</configuration>